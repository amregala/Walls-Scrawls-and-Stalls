<%- include('./partials/page.ejs') %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/header-style.css" />
    <title>Walls, Scrawls and Stalls</title>
    <style>
      body {
        background-color: rgb(61, 58, 58);
      }
      button a {
        color: black;
      }
    </style>
  </head>

  <body>
    <header>
      <h3 class="nav-title">
        <a href="/walls/loggedin"> WALLS, SCRAWLS, AND STALLS</a>
      </h3>
      <nav>
        <ul class="nav_links">
          <li><a href="/walls/loggedin/new">Add New Post </a></li>
          <li><a href="/users/signout">Signout</a></li>
        </ul>
      </nav>
    </header>

    <div class="mainContainer">
      <% for(let i=0; i < walls.length; i++) { %>
      <div class="single-doc">
        <a href="/walls/<%= walls[i].id %>">
          <img src="<%= walls[i].img%>" alt="" width="600" height="500" />
          <ul>
            <li class="year">Year | <%= walls[i].year %></li>
            <li class="location">Location | <%= walls[i].location %></li>
            <li class="artist">Artist | <%= walls[i].artist %></li>
          </ul>
        </a>
      </div>

      <!-- CRUD BUTTONS BELOW-->
      <div class="crud-btn">
        <!-- EDIT BUTTON -->
        <button>
          <a href="/walls/<%= walls[i].id; %>/edit">Edit </a>
        </button>
        <!-- DELETE BUTTON -->
        <form action="/walls/<%= walls[i].id%>?_method=DELETE" method="POST">
          <input type="submit" value="DELETE" />
        </form>
      </div>
      <% } %>
    </div>
  </body>
</html>
